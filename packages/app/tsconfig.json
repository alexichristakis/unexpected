{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6"],
    "allowJs": true /* Report errors in .js files. */,
    "jsx": "react-native",
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@redux/*": ["redux/*"],
      "@lib/*": ["lib/*"],
      "@assets/*": ["assets/*"],
      "@screens/*": ["screens/*"],
      "@api": ["api"],
      "@hooks": ["hooks"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
