{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["es6"],
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@redux/*": ["redux/*"],
      "@assets/*": ["assets/*"],
      "@screens/*": ["screens/*"],
      "@lib": ["lib"],
      "@api": ["api"],
      "@hooks": ["hooks"],
      "@global": ["global"]
    },
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "files": ["./declarations.d.ts"],
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
